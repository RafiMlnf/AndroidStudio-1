<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:backgroundTint="@color/darkgrey"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="73dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Jujutsu Kaisen"
            android:textColor="@color/milk"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginStart="30dp"
            android:layout_marginTop="49dp"
            app:srcCompat="@drawable/filmicon" />

    </androidx.cardview.widget.CardView>

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="99dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="397dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Sinopsis :"
        android:textSize="18dp"
        android:textColor="@color/milk" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="425dp"
        android:fontFamily="@font/montserrat_medium"
        android:justificationMode="inter_word"
        android:text="Yuji Itadori bertekad untuk menyelamatkan dunia dari iblis terkutuk, tetapi ia segera menyadari bahwa cara terbaik untuk melakukannya adalah dengan perlahan kehilangan kemanusiaannya dan menjadi satu dengan iblis itu sendiri! Di dunia di mana iblis memakan manusia tanpa disadari, fragmen dari iblis legendaris dan ditakuti, Ryoma Sukuna, hilang dan tersebar di seluruh tempat."
        android:textColor="@color/milk"
        android:textSize="15dp" />

</RelativeLayout>
